<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Цвета и кисти -->
  <Color x:Key="EsoftPrimaryBlue">#004AFF</Color>
  <Color x:Key="EsoftSuccessGreen">#00EFA5</Color>
  <Color x:Key="EsoftDangerRed">#E3002C</Color>
  <Color x:Key="EsoftWarningYellow">#FFE00C</Color>
  <Color x:Key="EsoftGray">#ECEFF1</Color>
  <Color x:Key="EsoftTextPrimary">#37474F</Color>
  <Color x:Key="EsoftBackground">#FFFFFF</Color>
  <SolidColorBrush x:Key="EsoftPrimaryBlueBrush" Color="{StaticResource EsoftPrimaryBlue}" />
  <SolidColorBrush x:Key="EsoftSuccessGreenBrush" Color="{StaticResource EsoftSuccessGreen}" />
  <SolidColorBrush x:Key="EsoftDangerRedBrush" Color="{StaticResource EsoftDangerRed}" />
  <SolidColorBrush x:Key="EsoftWarningYellowBrush" Color="{StaticResource EsoftWarningYellow}" />
  <SolidColorBrush x:Key="EsoftGrayBrush" Color="{StaticResource EsoftGray}" />
  <SolidColorBrush x:Key="EsoftTextPrimaryBrush" Color="{StaticResource EsoftTextPrimary}" />
  <SolidColorBrush x:Key="EsoftBackgroundBrush" Color="{StaticResource EsoftBackground}" />

  <!-- Стили -->
  <Style Selector="Button.esoft-primary">
    <Setter Property="Background" Value="{StaticResource EsoftPrimaryBlueBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontFamily" Value="Roboto"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <Style Selector="Button.esoft-success">
    <Setter Property="Background" Value="{StaticResource EsoftSuccessGreenBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <Style Selector="Button.esoft-danger">
    <Setter Property="Background" Value="{StaticResource EsoftDangerRedBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <Style Selector="Button.esoft-outline">
    <Setter Property="Background" Value="White"/>
    <Setter Property="Foreground" Value="{StaticResource EsoftPrimaryBlueBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource EsoftPrimaryBlueBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="CornerRadius" Value="3"/>
  </Style>
  <Style Selector="TextBox.esoft-input">
    <Setter Property="Background" Value="White"/>
    <Setter Property="Foreground" Value="{StaticResource EsoftTextPrimaryBrush}"/>
    <Setter Property="FontFamily" Value="Roboto"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Margin" Value="15"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BorderBrush" Value="{StaticResource EsoftGrayBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>
</ResourceDictionary> 